<% if @user.errors.any? %>
  <%= @user.errors.count %>errors
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
        <div for="inputName">Name</div>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
        <div for="inputImage">Image</div>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
        <div for="inputintrodction">Introduction</div>
       <%= f.text_area :introduction, autofocus: true, id:"inpuIntroduction", placeholder:"自己紹介"%> %><br>
        <%= f.submit "Update User", class:"btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>