<h3>New book</h3>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url:"/books", method: :post do |f| %>

	<%= f.label :Title %><br/>
	<%= f.text_field :title %>

	<br><%= f.label :Body %><br/>
	<%= f.text_area :body %>

	<br><%= f.submit 'Create Book' %></br>

<% end %>



<h3>Books</h3>
<table>
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>opinion</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= image_tag book.user.get_profile_image(100,100) %></td>
			<td><%= link_to book.title, book_path(book.id) %></td>
			<td><%= book.body %></td>
		</tr>
		<% end %>
	</tbody>
</table>

